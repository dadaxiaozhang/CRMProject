<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="departmentDao" class="com.lanou.department.dao.impl.DepartmentDaoImpl">
        <!--为继承来的SessionFactory属性赋值-->
        <property name="sessionFactory" ref="sessionFactory"/>

    </bean>

    <bean id="departmentService" class="com.lanou.department.service.impl.DepartmentServiceImpl">
        <property name="departmentDao" ref="departmentDao"/>
    </bean>
    
    <bean id="deptAction" class="com.lanou.department.action.DepartmentAction" scope="prototype">
        <property name="service" ref="departmentService"/>
    </bean>
</beans>